<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dang="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <Button
        android:id="@+id/bt_title_view_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="title view"/>

    <com.dxy.custommutipleview.view.TitleTextView
        android:id="@+id/tv_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        dang:title_text="371223"
        dang:title_text_color="#ff0000"
        dang:title_text_size="40sp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        />

    <com.dxy.custommutipleview.view.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        dang:title_text_color="#ff0000"
        dang:title_text="custom image view"
        dang:title_text_size="30sp"
        android:padding="10dp"
        dang:image="@mipmap/c"
        dang:imageScaleType="center"
        />

    <com.dxy.custommutipleview.view.CounterView
        android:layout_width="50dp"
        android:layout_height="50dp"
        />


</LinearLayout>
